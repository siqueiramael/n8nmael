<%- include('../partials/header', { title: 'Novo Agendamento' }) %>
<%- include('../partials/menu') %>

<div class="container-fluid main-content">
  <!-- Breadcrumbs -->
  <% 
    const breadcrumbs = [
      { title: 'Operacional', icon: 'fas fa-calendar-alt', url: '#' },
      { title: 'Agendamentos', icon: 'fas fa-calendar-check', url: '/admin/agendamentos' },
      { title: 'Novo Agendamento', icon: 'fas fa-plus' }
    ];
  %>
  <%- include('../partials/breadcrumbs', { breadcrumbs }) %>
  
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h4>
            <i class="fas fa-plus"></i> Novo Agendamento
            <span class="permission-badge badge bg-success ms-2" data-permission="agendamentos_criar">
              <i class="fas fa-plus"></i> Criação
            </span>
          </h4>
        </div>
        <div class="card-body">
          <!-- Formulário será inserido aqui -->
          <form method="POST" action="/admin/agendamentos">
            <!-- Campos do formulário -->
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label for="cliente_id" class="form-label">Cliente</label>
                  <select class="form-select" id="cliente_id" name="cliente_id" required>
                    <option value="">Selecione um cliente</option>
                    <!-- Opções serão carregadas dinamicamente -->
                  </select>
                </div>
              </div>
              <!-- Mais campos... -->
            </div>
            
            <div class="d-flex justify-content-between">
              <a href="/admin/agendamentos" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
              </a>
              <button type="submit" class="btn btn-primary" data-permission="agendamentos_criar">
                <i class="fas fa-save"></i> Salvar Agendamento
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>